{{# if products}}

<div class="row mt-3">
    <div class="col-md-10 col-md-offset-2 mx-auto mt-4">
        <ul class="list-group">
            {{# each products}}
            <li class="list-group-item">



                <span class="badge badge-pill badge-secondary">x {{this.qty}}</span>

                <img src="{{ this.item.imagePath }}" height="50px">


                <strong>{{this.item.title}}</strong>
                <span class="badge badge-light">{{this.price}} <i class="fas fa-shekel-sign"></i></span>

                <div class="btn-group float-left">
                    <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">
                        פעולות <span class="caret"></span></button>
                    <ul class="dropdown-menu">
                        <li class="">
                            <a href="/addOne/{{this.item._id}}" class="dropdown-item">הוסף מוצר אחד</a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li class="">
                            <a href="/reduce/{{this.item._id}}" class="dropdown-item">החסר מוצר אחד</a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li class="">
                            <a href="/remove/{{this.item._id}}" class="dropdown-item">מחק הכל</a>
                        </li>
                    </ul>
                </div>

            </li>
            {{/each}}
        </ul>
    </div>
</div>
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3 mt-3">
        <strong>סה"כ לתשלום: {{totalPrice}} ש"ח.</strong>
    </div>
</div>
<hr>
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <a href="/checkout" class="btn btn-success" role="button">צ'קאאוט</a>

        <a href="/remove-all" class="btn btn-danger" role="button">רוקן את העגלה</a>
    </div>
</div>
{{else}}

<div class="row mt-3">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <h2>אין פריטים בעגלה.</h2>
    </div>
</div>

{{/if}}