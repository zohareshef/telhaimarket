<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="mt-4 alert alert-success{{#if noMessage}} d-none{{/if}}">
            {{ successMsg }}
        </div>
    </div>
</div>

{{# each products }}
<div class="row mt-3">
    {{# each this }}
    <div class=".col-sm-6 col-md-4 my-3 my-3">
        <div class="card">
            <img src="{{ this.imagePath }}" class="card-img-top img-responsive" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{ this.title }}</h5>
                <p class="card-text">
                    {{ this.description }}
                </p>
                <div class="clearfix">
                    <div class="price float-right">{{ this.price }} ש"ח</div>
                    <a href="/add-to-cart/{{this._id}}" class="btn btn-success float-left"> הוסף לעגלה</a>
                </div>
            </div>
        </div>
    </div> <!-- .col -->
    {{/each}}
</div> <!-- .row -->
{{/each}}